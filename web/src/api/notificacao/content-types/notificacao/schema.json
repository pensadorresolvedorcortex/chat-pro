{
  "kind": "collectionType",
  "collectionName": "notificacoes",
  "info": {
    "singularName": "notificacao",
    "pluralName": "notificacoes",
    "displayName": "Notificação",
    "description": "Notificações push e mensagens agendadas por segmento"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    }
  },
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "mensagem": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    },
    "tipo": {
      "type": "string"
    },
    "segmento": {
      "type": "json"
    },
    "agendadaPara": {
      "type": "datetime"
    }
  }
}
