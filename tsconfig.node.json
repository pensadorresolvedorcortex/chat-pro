{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts"]
}
